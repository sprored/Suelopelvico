<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="10"
        android:title="@string/total_exercise_time" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_2"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="12"
        android:title="@string/contraction_time" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_3"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"
        android:summary="6"
        android:title="@string/rest_time" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="check_box_preference_1"
        android:summaryOff="Sound off"
        android:summaryOn="Sound on"
        android:title="Sound" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_preference_1"
        android:summaryOff="Turns"
        android:summaryOn="Minutes"
        android:title="Show minutes" />

    <Preference
        android:selectable="false"
        android:summary="\@string/summary_about" />

    <Preference
        android:summary="\@string/app_version"
        android:title="\@string/title_version" />

    <Preference
        android:key="\@string/key_send_feedback"
        android:summary="\@string/summary_support"
        android:title="\@string/title_send_feedback" />
</PreferenceScreen>